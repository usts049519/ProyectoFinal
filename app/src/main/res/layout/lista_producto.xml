<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/lblDescripcion"
        android:text="Descripcion:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/descrip"
        android:text="ejemplo"
        android:textSize="20sp"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/lblDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblPrecio"
        android:text="Precio:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/lblDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/precio"
        android:text="12345"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblDescripcion"
        android:layout_toRightOf="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblFechaPublicado"
        android:text="Fecha reg.:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="13dp"
        android:layout_below="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fecha"
        android:text="0/0/00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_marginBottom="13dp"
        android:layout_below="@+id/lblPrecio"
        android:layout_toRightOf="@+id/lblFechaPublicado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>